<!DOCTYPE html>
<html lang="zh">
<head>
    <meta charset="utf-8">
    <title>Online Code Editor</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/codemirror@5.52.0/lib/codemirror.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.4.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/codemirror@5.52.0/lib/codemirror.min.js"></script>
    <style>
        * {
            box-sizing: border-box;
        }

        html, body {
            width: 100%;
            height: 100%;
            border: 0;
            margin: 0;
            padding: 0;
        }

        .CodeMirror {
            font-size: 18px;
            font-family: Consolas, monospace !important;
            width: 100%;
            height: 100% !important;
        }

        .control {
            position: absolute;
            width: 30px;
            height: 30px;
            top: 20px;
            right: 20px;
            background-color: #444;
            border-radius: 50px;
            cursor: pointer;
        }

        .control:active {
            background-color: #777;
        }

        .panel {
            position: absolute;
            width: 400px;
            height: 60px;
            background-color: aqua;
            top: 0;
            right: 0;
        }
    </style>
</head>
<body>
<label for="editor"></label><textarea id="editor"></textarea>
<div class="control">

</div>
<script>
    const editor = CodeMirror.fromTextArea(document.getElementById('editor'), {
        lineNumbers: true
    })
</script>
</body>
</html>